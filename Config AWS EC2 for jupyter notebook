# Change the permissions of the pem file
chmod 400 "Universidad_Central.pem"

ssh -i Universidad_Central.pem ubuntu@ec2-18-234-101-232.compute-1.amazonaws.com

# Install all the necessary Data science modules including flask
sudo apt update
sudo apt install python3-pip
sudo apt install pipx
sudo apt install jupyter-core

export PATH=$PATH:~/.local/bin
source ~/.bashrc
pipx install jupyter
pipx install notebook
pipx install jupyterlab
pipx install jupyter notebook
echo 'export PATH=$PATH:~/.local/bin' >> ~/.bashrc
source ~/.bashrc

# Set the password for jupyterlab 
jupyter notebook password

# Initiate jupyterlab 
jupyter-lab --ip 0.0.0.0 --no-browser --allow-root
